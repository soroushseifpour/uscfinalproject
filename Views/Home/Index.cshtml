        </div>

        <div class="row">
            @foreach (var item in Model.categoryvms)
            {
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <div class="category-card" style="height:209.67px">
                        <i class="flaticon-accounting"></i>
                        <h3>@item.catname</h3>
                        <p>@item.count موقعیت باز</p>
                    </div>
                </div>

            }
        </div>
    </div>
</section>
<!-- Category Section End -->
<!-- Banner Section End -->
