<!-- Companies Section Start -->
<section class="company-section pt-100 pb-70">
    <div class="container">
        <div class="section-title text-center">
            <h2>شرکت های برتر</h2>
            <p>سازمانهای معتبر برای استخدام.</p>
        </div>

        <div class="row">
            @foreach (var item in Model.companiesvms)
            {
                <div class="col-lg-3 col-sm-6">
                    <div class="company-card" style="height:330px;border-radius:15px;border-style:solid">
                        <div class="company-logo">
                            <a href="@Url.Action("JobLists",new { id= item.id , img=item.img})">
                                <img style="width:100.41px;height:50.67px" src="@item.img" alt="آرم شرکت">
                            </a>
                        </div>
                        <div class="company-text">
                            <h3>@item.name</h3>
                            <p>
                                <i class="bx bx-location-plus"></i>
                                @item.address
                            </p>
                            <a href="@Url.Action("JobLists","Job",new { id= item.id})" class="company-btn" style="border-radius:5px">
                                @item.FormsCount موقعیت باز
                            </a>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</section>
<!-- Companies Section End -->
