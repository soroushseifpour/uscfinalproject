

@model UscProject.Models.FormTB
@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>مشخصات فرم</title>
    <style>

        #t1 {
            border: 1px solid white;
            border-collapse: collapse;
            text-align: center;
        }

            #t1 th {
                border: 1px solid white;
                border-collapse: collapse;
                text-align: center;
            }

            #t1 td {
                border: 1px solid white;
                border-collapse: collapse;
                
                padding: 5px;
            }
    </style>
</head>
<body>
    <h4>مشخصات فرم</h4>

    <table id="t1" style="width:100%" >
        <tr>
            <th>شهر</th>
            <td style="text-align: center;">@Model.City</td>
        </tr>
        <tr>
            <th>منطقه</th>
            <td style="text-align: center;">@Model.Region</td>
        </tr>

        <tr>
            <th>مزایای شغلی</th>
            <td style="text-align: center;">@Model.Benefits</td>
        </tr>

        <tr>
            <th>تعداد روز ها</th>
            <td style="text-align: center;">@Model.WorkingDays</td>
        </tr>

        <tr>
            <th>نوع شغل</th>
            <td style="text-align: center;">@Model.JobDescRiption</td>
        </tr>
        <tr>
            <th>توضیحات</th>
            <td style="text-align: justify;">@Model.FormText</td>
        </tr>

        <tr>
            <th>نرم افزار مورد نیاز</th>
            <td  style="text-align: justify;">@Model.Requirements</td>
        </tr>

        <tr>
            <th>توانایی ها</th>
            <td  style="text-align: justify;">@Model.Abilities</td>
        </tr>
    </table>

</body>
</html>



